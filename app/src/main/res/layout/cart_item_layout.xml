<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/placard"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp">


        <Button
            android:id="@+id/increase"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="+"
            android:stateListAnimator="@null"
            android:textSize="15dp"
            android:translationX="315dp" />

        <Button
            android:id="@+id/decrease"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/white"
            android:text="-"
            android:stateListAnimator="@null"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:translationX="275dp" />
    <!-- Decrease the spacing between the quantity and the increment/decrement signs -->

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="310dp"
        android:translationY="25dp"
        android:text="1" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">


        <TextView
            android:id="@+id/FoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:translationX="60dp"
            android:translationY="20dp" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:translationX="360dp"
                android:translationY="-12dp"
                app:srcCompat="@drawable/ic_baseline_delete_24" />
            <!-- Put the trash icon to the end -->

        <!-- Creates the increment and decrementer, ElegantNumberButton is a third-party widget -->
        <!--<com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/addordecrement"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:translationX="3dp"
            android:translationY="15dp"
            app:finalNumber="5"
            app:initialNumber="1" />-->


    </LinearLayout>

</androidx.cardview.widget.CardView>